<div class="login-modal" id="login-modal" hidden>
  <div class="login-modal__overlay">
    <div class="login-modal__content">
      <div class="login-modal__header">
        <h3>Login Required</h3>
        <button type="button" class="login-modal__close" onclick="closeLoginModal()">
          {{ 'icon-close.svg' | inline_asset_content }}
        </button>
      </div>
      
      <div class="login-modal__body">
        <p>Please login or create an account to proceed with checkout</p>
        
        <div class="login-options">
          <div class="login-option">
            <h4>Existing Customer</h4>
            <a href="/account/login?return_url={{ request.path }}" class="button">
              Login
            </a>
          </div>
          
          <div class="login-option">
            <h4>New Customer</h4>
            <a href="/account/register?return_url={{ request.path }}" class="button button-secondary">
              Create Account
            </a>
          </div>
        </div>
        
        <div class="guest-checkout-option">
          <p>Or continue as guest:</p>
          <button type="button" class="button button-unstyled" onclick="proceedAsGuest()">
            Continue as Guest
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .login-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .login-modal__content {
    background-color: var(--color-background);
    border-radius: var(--style-border-radius-inputs);
    padding: var(--padding-xl);
    max-width: 400px;
    width: 90%;
    position: relative;
    z-index: 1001;
  }

  .login-modal__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--margin-lg);
  }

  .login-modal__close {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--padding-xs);
  }

  .login-options {
    display: flex;
    flex-direction: column;
    gap: var(--gap-md);
    margin-bottom: var(--margin-lg);
  }

  .login-option {
    text-align: center;
    padding: var(--padding-md);
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-inputs);
  }

  .login-option h4 {
    margin-bottom: var(--margin-sm);
  }

  .guest-checkout-option {
    text-align: center;
    padding-top: var(--padding-md);
    border-top: 1px solid var(--color-border);
  }

  .guest-checkout-option p {
    margin-bottom: var(--margin-sm);
    color: var(--color-foreground-subdued);
  }
{% endstylesheet %}
